<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="FurnitureWithQualityBase">
        <defName>SR_BondageBed</defName>
        <thingClass>SR.DA.Thing.Building_BondageBed</thingClass>
        <label>束缚床</label>
        <description>测试</description>
        <drawGUIOverlay>true</drawGUIOverlay>
        <canOverlapZones>false</canOverlapZones>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <passability>PassThroughOnly</passability>
        <defaultPlacingRot>South</defaultPlacingRot>
        <graphicData>
        <texPath>Things/Building/Furniture/Bed/Bed</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(2,2)</drawSize>
            <color>(62,164,249)</color>
            <damageData>
                <rect>(0,0.05,1,1.95)</rect>
            </damageData>
        </graphicData>
        <comps>
            <li Class="CompProperties_Forbiddable" />
            <!-- 设施影响 梳妆台 桌子之类  继承bed必须实现的接口，没有使用到-->
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                </linkableFacilities>
            </li>
            <!-- 交互 -->
            <li Class="CompProperties_Usable">
              <compClass>SR.DA.Component.CompUsableBondageBed</compClass>
              <useJob>SR_BondageBed</useJob>
              <useLabel>捆绑</useLabel>
            </li>
            <!-- 触发效果 -->
            <li Class="CompProperties_UseEffect">
                <compClass>SR.DA.Component.CompEffectBondageBed</compClass>
            </li>
            <!-- 移除效果 -->
            <li Class="CompProperties_UseEffect">
                <compClass>SR.DA.Component.CompRemoveEffectBondageBed</compClass>
            </li>
            <!-- 继承bed必须实现的接口，没有使用到 -->
            <li Class="CompProperties_AssignableToPawn">
                <drawAssignmentOverlay>false</drawAssignmentOverlay>
                <compClass>CompAssignableToPawn</compClass>
            </li>
        </comps>
        <statBases>
            <MaxHitPoints>140</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Beauty>1</Beauty>
            <WorkToBuild>800</WorkToBuild>
            <Mass>30</Mass>
            <BedRestEffectiveness>1</BedRestEffectiveness>
            <Comfort>0.75</Comfort>
            <ImmunityGainSpeedFactor>1.07</ImmunityGainSpeedFactor>
            <SurgerySuccessChanceFactor>1</SurgerySuccessChanceFactor>
        </statBases>
        <size>(1,2)</size>
        <!-- 混合材料 -->
        <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>45</costStuffCount>
        <!-- 额外固定消耗 -->
        <costList>
          <Cloth>20</Cloth>
      </costList>
        <building>
            <bed_showSleeperBody>False</bed_showSleeperBody>
            <bed_healPerDay>4</bed_healPerDay>
        </building>
        <fillPercent>0.4</fillPercent>
        <pathCost>60</pathCost>
        <staticSunShadowHeight>0.17</staticSunShadowHeight>
        <castEdgeShadows>True</castEdgeShadows>
        <designationHotKey>Misc2</designationHotKey>
        <techLevel>Medieval</techLevel>
        <researchPrerequisites>
            <li>ComplexFurniture</li>
        </researchPrerequisites>
        <uiIconScale>0.90</uiIconScale>
    </ThingDef>
    <ThingDef ParentName="FurnitureWithQualityBase">
      <defName>SR_ElectrocutionChair</defName>
      <thingClass>SR.DA.Thing.Building_ElectrocutionChair</thingClass>
      <label>电椅</label>
      <description>坐上去会非常舒适。</description>
      <graphicData>
        <texPath>Things/Building/Furniture/DiningChair</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        <drawSize>(1,1)</drawSize>
        <damageData>
          <rectN>(0.25,0.234375,0.5,0.28125)</rectN>
          <rectS>(0.25,0.234375,0.5,0.28125)</rectS>
          <rectE>(0.28125,0.25,0.453125,0.25)</rectE>
          <rectW>(0.28125,0.25,0.453125,0.25)</rectW>
        </damageData>
        <shadowData>
          <volume>(0.23, 0.26, 0.23)</volume>
        </shadowData>
      </graphicData>
      <comps>
          <li Class="CompProperties_Usable">
            <compClass>SR.DA.Component.CompUsableElectrocutionChair</compClass>
            <useJob>SR_ElectrocutionChair</useJob>
            <useLabel>处刑</useLabel>
          </li>
          <li Class="CompProperties_UseEffect">
            <compClass>SR.DA.Component.CompEffectElectrocutionChair</compClass>
          </li>
          <li Class="CompProperties_Power">
            <compClass>CompPowerTrader</compClass>
            <basePowerConsumption>50</basePowerConsumption>
          </li>
          <li Class="CompProperties_Flickable"/>
      </comps>
      <altitudeLayer>Building</altitudeLayer>
      <statBases>
        <MaxHitPoints>170</MaxHitPoints>
        <WorkToBuild>8000</WorkToBuild>
        <Mass>5</Mass>
        <Flammability>1.0</Flammability>
        <Beauty>8</Beauty>
        <Comfort>0.7</Comfort>
      </statBases>
      <socialPropernessMatters>true</socialPropernessMatters>
      <stuffCategories>
        <li>Metallic</li>
        <li>Woody</li>
      </stuffCategories>
      <costStuffCount>45</costStuffCount>
      <costList>
        <Gold>20</Gold>
      </costList>
      <pathCost>30</pathCost>
      <designationHotKey>Misc7</designationHotKey>
      <fillPercent>0.35</fillPercent>
      <defaultPlacingRot>South</defaultPlacingRot>
      <building>
        <isSittable>false</isSittable>
      </building>
      <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
      <!-- 复杂家具+电力解锁 -->
      <researchPrerequisites>
        <li>ComplexFurniture</li>
        <li>Electricity</li>
      </researchPrerequisites>
    </ThingDef>
</Defs>
