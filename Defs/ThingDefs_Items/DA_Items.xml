<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>SR_Item_Chains</defName>
    <label>chains</label>
    <thingClass>ThingWithComps</thingClass>
    <description>It will reduce user's ability of manipulation and moving.</description>
    <graphicData>
      <texPath>Things/Item/Special/SubpersonaCoreTechprof</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>1</stackLimit>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <MarketValue>200</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>2.0</Mass>
      <Flammability>0.2</Flammability>
    </statBases>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeability>Sellable</tradeability>
    <alwaysHaulable>true</alwaysHaulable>
    <comps>
      <li Class="CompProperties_Usable">
        <compClass>SR.DA.Component.CompUsableBondageChains</compClass>
        <useJob>SR_Job_BondageChains</useJob>
        <useLabel>use chains</useLabel>
      </li>
      <li Class="CompProperties_UseEffect">
        <compClass>SR.DA.Component.CompEffectBondageChains</compClass>
      </li>
    </comps>
    <researchPrerequisites>
        <li>SR_RP_Torture</li>
    </researchPrerequisites>
    <recipeMaker>
      <researchPrerequisite>SR_RP_Torture</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Steel>30</Steel>
    </costList>
  </ThingDef>
